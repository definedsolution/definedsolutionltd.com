---
import Hero from "@/_components/hero.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";

const featuredCustomers = [
  {
    name: "Fascino",
    logo: "/clients/fascinobd.svg",
  },
  {
    name: "PND Service",
    logo: "/clients/pndservicebd.svg",
  },
  {
    name: "Fascino",
    logo: "/clients/fascinobd.svg",
  },
  {
    name: "PND Service",
    logo: "/clients/pndservicebd.svg",
  },
  {
    name: "Fascino",
    logo: "/clients/fascinobd.svg",
  },
  {
    name: "PND Service",
    logo: "/clients/pndservicebd.svg",
  },
  {
    name: "Fascino",
    logo: "/clients/fascinobd.svg",
  },
  {
    name: "PND Service",
    logo: "/clients/pndservicebd.svg",
  },
];
---

<MainLayout>
  <!-- Hero Section -->
  <Hero>
    <!-- <video
      autoplay
      muted
      loop
      controls={false}
      class="absolute top-1/2 -translate-y-1/2 mix-blend-lighten w-full object-cover"
    >
      <source src="/screen.mp4" type="video/mp4" />
    </video> -->
    <div
      class="absolute bottom-4 left-4 md:bottom-5 md:left-5 xl:bottom-10 xl:left-10 max-w-[calc(100vw-var(--spacing)*10*2)]"
    >
      <h1 class="hero-title font-bold mb-2 md:mb-4 uppercase">
        Unlock Your <br />
        Brand's <strong>Potential</strong>
        <br />
        with Our <strong>Unique Approach</strong>.
      </h1>
      <p class="subtitle md:font-bold text-muted">
        Defined Solution Limited is a 360 agency. Helping businesses develop
        experiences and empower growth.
      </p>
    </div>
  </Hero>
  <!-- Featured Customers Section -->
  <section class="p-2 px-4 md:px-16 flex flex-col md:flex-row md:items-center justify-between gap-2 md:gap-10">
    <h2 class="text-lg font-bold min-w-fit">
      <strong class="title">50+</strong>
      <br />
      <span class="uppercase subtitle">Happy Customers World-wide</span>
    </h2>
    <div class="flex flex-row gap-4 max-w-svw overflow-x-hidden">
      {
        featuredCustomers.map((customer) => (
          <div class="h-16 md:h-24 aspect-square">
            <img
              src={customer.logo}
              alt={customer.name}
              class="h-full object-contain saturate-0 hover:saturate-100 transition-all"
            />
          </div>
        ))
      }
    </div>
  </section>

  <!-- About Us Section -->
  <section
    class="full-card m-2 md:m-4 p-4 relative min-h-[calc(85vh-var(--spacing)*4*2)] bg-card grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-12"
  >
    <div class="col-span-1 lg:col-span-2 relative max-h-[90vh]">
      <div
        class="h-full w-full bg-primary/15 mix-blend-overlay mb-4 rounded-lg absolute"
      >
      </div>
      <img
        src="/team-working.png"
        alt="About Us Attachment"
        class="w-full h-full object-cover object-center rounded-lg"
      />
    </div>
    <div
      class="col-span-1 md:pt-44 md:col-span-2 lg:col-span-3 space-y-4 content-center"
    >
      <h2 class="title font-bold mb-4 uppercase">
        Innovation Redefined ~ <br />
        We Bring Your <strong>Vision to Life</strong>.
      </h2>
      <p class="subtitle text-muted max-w-4xl">
        We don't just build â€” we craft experiences that engage, convert, and
        inspire. Backed by innovation and industry expertise, we transform
        insights into pixel-perfect digital solutions.
      </p>
      <p class="subtitle text-muted max-w-4xl">
        From apps to websites, we deliver seamless, high-impact solutions that
        redefine user experience and solve business problems. Let's build
        something extraordinary together!
      </p>
      <div
        class="flex flex-col sm:flex-row items-start md:items-center gap-4 md:gap-8 xl:gap-10 py-3"
      >
        {
          [
            {
              value: 65,
              suffix: "+",
              label: "Projects Delivered",
            },
            {
              value: 30,
              suffix: "+",
              label: "Team Members",
            },
          ].map((stat) => (
            <div class="font-bold uppercase">
              <span class="title font-bold text-primary">
                {stat.value}
                {stat.suffix}
              </span>
              <br />
              <span class="subtitle text-muted">{stat.label}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Words From CTO Section -->
  <section
    class="relative min-h-[50vh] flex flex-col items-center justify-center p-4"
  >
    <div class="flex flex-row items-start gap-4 justify-center py-20">
      <p class="text-2xl md:text-5xl text-primary">"</p>
      <p class="text-xl md:text-3xl font-semibold text-center uppercase">
        We provide creative solutions <br />
        for your creative ideas.
      </p>
      <p class="text-2xl md:text-5xl text-primary">"</p>
    </div>
    <div class="text-center mt-20">
      <img src="/sign.svg" />
      <h3 class="font-bold text-lg md:text-2xl mt-7">Ahmad Sayeef Khan</h3>
      <p class="text-muted">CEO, Defined Solution</p>
    </div>
    <img
      src="/logo.svg"
      class="absolute opacity-5 -z-10 top-1/2 left-1/2 -translate-1/2 h-70 w-70"
    />
  </section>

  <!-- Our Services -->
  <section class="flex flex-col m-2 mt-20">
    <div class="flex flex-col md:flex-row items-start gap-10 justify-between px-10">
      <h2 class="uppercase font-bold title">
        Our <strong>Exclusive</strong><br />
        Digital <strong>Services</strong>
      </h2>
      <div class="max-w-4xl space-y-8">
        <p class="subtitle">
          Whether it's crafting a visually stunning brand identity, designing
          immersive digital experiences, or developing strategic enterprise
          software, we deliver it with passion.
        </p>
        <a href="#" class="subtitle underline text-primary underline-offset-4">
          <strong>Have any idea? Get a Quote</strong>
          </a>
      </div>
    </div>

    <!-- Service Cards -->
     <div class="grid grid-cols-1 mt-20 md:grid-cols-3 items-stretch gap-4">
       {
        [
          {
            title: "Branding &\n Digital Marketing",
            slug: "branding-digital-marketing",
            image: "/services/branding-marketing.png",
          },
          {
            title: "Web Design\n & Development",
            slug: "web-design-development",
            image: "/services/branding-marketing.png",
          },
          {
            title: "Software Design\n & Development",
            slug: "software-design-development",
            image: "/services/branding-marketing.png",
          },
        ].map((service) => (
          <a
            href={`/services/${service.slug}`}
            class="relative group overflow-hidden min-h-96 aspect-5/6 rounded-xl bg-card base-card hover:border-primary/90"
          >            
              <img
                src={service.image}
                alt={service.title}
                class="w-4/5 h-auto absolute object-cover scale-125 group-hover:scale-150 right-0 -bottom-10 opacity-70 transition-transform"
              />
            <div class="p-6 flex-grow flex flex-row items-start justify-between">
              <h3 class="font-bold whitespace-pre-wrap title uppercase ">
                {service.title}
              </h3>
              <button class="text-primary text-4xl scale-0 group-hover:scale-100 transition-transform bg-primary/10 rounded-full duration-300 !aspect-square p-3">
                <Icon name={"lucide:arrow-up-right"} />
              </button>
            </div>
          </a>
        ))
       }
     </div>
    <div>

    </div>
  </section>

  <div class="h-[70vh]"></div>
</MainLayout>
